

<div class="page-header">
  <h1>职位详情</h1>
</div>

<table class="table table-bordered">
    <tr>
        <th class="col-md-6">职位</th>
        <td class="col-md-6"><%= @position.name %></th>
    </tr>
    <tr>
        <th>公司</td>
        <td><%= @position.company %></td>
    </tr>
    <tr>
        <th>描述</td>
        <td><%= @position.description %></td>
    </tr>
    <tr>
        <th>流程</td>
        <td>
            <dl class="dl-horizontal" id="stages">
            <% @position.steps.each do |step|%>
                <dt style="text-align:left;"><%= step.phase.description %></dt> 
                <dd><%= step.steps %>轮</dd>
            <% end %>
            </dl>
        </td>
    </tr>
    <tr>
        <th>状态</td>
        <td><%= @position.phase.description if @position.phase%> 
            <%= "第#{@position.current_step}轮" if @position.current_step %>
            <%= @position.waiting ? "等待结果中" : "" %>
        </td>
    </tr>
    <tr>
        <th>备注</td>
        <td><%= @position.note %></td>
    </tr>
    <tr>
        <th><%=@position.waiting ? "完成日期" : "截止日期" %></td>
        <td><%= @position.deadline.strftime("%Y-%m-%d") if @position.deadline%></td>
    </tr>
</table>

<%= link_to raw('<button class="btn btn-primary"> 确定 </button>'), {:action => 'index'}%>
<%= link_to raw('<button class="btn btn-primary"> 编辑 </button>'), {:action => 'edit', :id => @position.id}%>
<%= link_to raw('<button class="btn btn-danger"> 删除 </button>'), {:action => 'delete', :id => @position.id}%>
